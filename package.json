{
  "name": "badoriio-terminal-portfolio",
  "version": "1.0.0",
  "description": "Interactive terminal-style portfolio website with Snake game",
  "main": "src/App.ts",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "serve": "python3 -m http.server 8080",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/badoriio/badoriio.github.io.git"
  },
  "keywords": [
    "portfolio",
    "terminal",
    "interactive",
    "javascript",
    "es6-modules",
    "snake-game",
    "responsive"
  ],
  "author": "Badoriio <amir@badori.io>",
  "license": "MIT",
  "homepage": "https://badoriio.github.io",
  "lint-staged": {
    "*.{ts,tsx}": ["eslint --fix"],
    "*.{ts,tsx,js,jsx,json,css,md}": ["prettier --write"]
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/qrcode": "^1.5.5",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-plugin-static-copy": "^3.1.2"
  },
  "dependencies": {
    "qrcode": "^1.5.4"
  }
}
